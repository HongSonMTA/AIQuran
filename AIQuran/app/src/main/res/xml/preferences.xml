
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Display">
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/Determine"
            android:title="@string/BackLight" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/IfYou"
            android:title="@string/WordMeaning" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appBrowsingMethodArray"
            android:entryValues="@array/appBrowsingMethodValue"
            android:key="BrowsingMethod"
            android:summary="@string/ChangeHoly"
            android:title="@string/BrowsingMethod" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/WithThisOption"
            android:title="@string/NightReading" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/CheckThis"
            android:title="@string/GraphicalBackground" />
        <Preference
            android:title="@string/ChooseThems"
            android:key="ChooseThems"
            android:summary="@string/ForAll" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="Holy Quran Font">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appSettingsLanguageListArray"
            android:entryValues="@array/appSettingsLanguageListValues"
            android:key="languageSettings"
            android:summary="@string/FontSize"
            android:title="@string/SetFont"/>
        <com.github.danielnilsson9.colorpickerview.preference.ColorPreference
            android:defaultValue="0xFF000000"
            android:key="FontColor"
            android:summary="@string/SetColor"
            android:title="@string/FontColor" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/SlectText"
            android:title="@string/TextStroke" />
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/ChectText"
            android:title="@string/TextBold" />
        <com.github.danielnilsson9.colorpickerview.preference.ColorPreference
            android:defaultValue="0xFF000000"
            android:key="TextStrokeColor"
            android:summary="@string/YouChoose"
            android:title="@string/TextStrokeColor" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Audio">
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appCurentReciterArray"
            android:entryValues="@array/appCurentReciterValue"
            android:key="CurentReciterSetting"
            android:summary="@string/SetThe"
            android:title="@string/CurentReciter" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appAudioStorageArray"
            android:entryValues="@array/appCurentReciterValue"
            android:key="audioStorage"
            android:summary="@string/ChooseStorage"
            android:title="@string/AudioStorage" />

        <Preference
            android:title="@string/DownloadAudio"
            android:key="DownloadAudio" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/RepeatPlaying"
            android:title="@string/Repeat" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appChooseAyatArray"
            android:entryValues="@array/appChooseAyatValue"
            android:key="ChooseAyat"
            android:summary="@string/RepeatAyat"
            android:title="@string/ChooseAyat"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Translation \ Tafsir">
        <SwitchPreference
            android:defaultValue="true"
            android:key="updateNotificationSetting"
            android:summary="@string/CheckTafsir"
            android:title="@string/Tafsir" />
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appChooseTranslationArray"
            android:entryValues="@array/appChooseTranslationValue"
            android:key="ChooseTranslation"
            android:summary="@string/ChooseTafsir"
            android:title="@string/ChooseTafsirTranlation" />

        <Preference
            android:title="@string/DownloadTafsir"
            android:key="DownloadTafsir" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/appTafsirTranslationFontSizeArray"
            android:entryValues="@array/appTafsirTranslationFontSizeValue"
            android:key="TafsirTranslationFontSize"
            android:summary="@string/ChooseTafsirFontSize"
            android:title="@string/TafsirTranslationFontSize" />
    </PreferenceCategory>

</PreferenceScreen>